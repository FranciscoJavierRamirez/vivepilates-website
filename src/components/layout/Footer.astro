---
import Container from '../ui/Container.astro';
// Placeholder: Parsea footer-info.md
const info = {
  title: 'VivePilates',
  address: 'Av. Kennedy 6800, Vitacura',
  hours: 'Lunes a Viernes 8:00-20:00',
  email: 'info@vivepilates.cl',
  phone: '+56 9 1234 5678',
  whatsapp: '+56912345678',
  links: [
    { label: '¿Por qué Pilates?', href: '/por-que-pilates' },
    { label: 'Servicios', href: '/servicios' },
    { label: 'Sobre Nosotros', href: '/sobre-nosotros' },
    { label: 'Clase de Prueba', href: '/servicios#clase-prueba' },
  ],
  social: {
    instagram: {
      url: 'https://instagram.com/vivepilates',
      handle: '@vivepilates',
    },
  },
};
const mapKey = import.meta.env.PUBLIC_GOOGLE_MAPS_KEY;
---

<footer
  class="bg-[var(--charcoal-gray)] text-white py-12 mt-auto"
  role="contentinfo"
  aria-label="Información del pie de página"
>
  <Container>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Columna 1: Info General -->
      <div role="region" aria-label="Información general">
        <h3 class="font-bold text-xl mb-4 text-[var(--coral-primary)]">
          {info.title}
        </h3>
        <p class="mb-2 text-gray-300">{info.address}</p>
        <p class="mb-4 text-gray-300">{info.hours}</p>
        <span
          class="inline-block bg-[var(--warm-gold)] text-[var(--white)] px-3 py-1 rounded-full text-sm"
        >
          Profesionales Certificados
        </span>
      </div>

      <!-- Columna 2: Enlaces Rápidos -->
      <div role="region" aria-label="Enlaces de navegación">
        <h3 class="font-bold text-xl mb-4 text-[var(--coral-primary)]">
          Enlaces Rápidos
        </h3>
        <ul class="space-y-2">
          {
            info.links.map(link => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-300 hover:text-[var(--coral-primary)] transition-colors hover-lift"
                  aria-label={`Ir a ${link.label}`}
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Columna 3: Contacto con CTA y Mapa pequeño -->
      <div role="region" aria-label="Información de contacto">
        <h3 class="font-bold text-xl mb-4 text-[var(--coral-primary)]">
          Contacto
        </h3>

        <!-- Email -->
        <div class="mb-3 flex items-center">
          <svg
            class="w-4 h-4 mr-2 text-gray-300"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
            ></path>
            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
            ></path>
          </svg>
          <a
            href={`mailto:${info.email}`}
            class="text-gray-300 hover:text-[var(--coral-primary)] transition-colors text-sm"
            aria-label={`Enviar email a ${info.email}`}
          >
            {info.email}
          </a>
        </div>

        <!-- Teléfono -->
        <div class="mb-4 flex items-center">
          <svg
            class="w-4 h-4 mr-2 text-gray-300"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
            ></path>
          </svg>
          <a
            href={`tel:${info.whatsapp}`}
            class="text-gray-300 hover:text-[var(--coral-primary)] transition-colors text-sm"
            aria-label={`Llamar al ${info.phone}`}
          >
            {info.phone}
          </a>
        </div>

        <!-- WhatsApp Button -->
        <a
          href={`https://wa.me/${info.whatsapp}?text=Hola,%20quiero%20más%20información`}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center bg-[var(--sage-green)] text-white px-4 py-2 rounded-lg hover-lift mb-4 w-full justify-center"
          aria-label="Contactar por WhatsApp"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"
            ></path>
          </svg>
          WhatsApp
        </a>

        <!-- Instagram -->
        <div class="mb-4 flex items-center">
          <svg
            class="w-5 h-5 mr-2 text-gray-300"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M12.017 0C8.396 0 7.989.013 7.041.048 6.094.082 5.52.204 5.012.388a6.5 6.5 0 0 0-2.346 1.267c-.905.63-1.614 1.432-2.045 2.331C.347 4.518.213 5.091.181 6.038.019 7.043.005 7.406.005 12.017c0 4.624.014 4.99.048 5.934.034.943.156 1.516.34 2.024a6.1 6.1 0 0 0 1.269 2.356c.63.905 1.432 1.614 2.331 2.045.532.274 1.105.408 2.052.44.934.035 1.297.049 5.907.049 4.624 0 4.99-.014 5.934-.048.943-.034 1.516-.156 2.024-.34a6.1 6.1 0 0 0 2.356-1.269c.905-.63 1.614-1.432 2.045-2.331.274-.532.408-1.105.44-2.052.035-.934.049-1.297.049-5.907 0-4.624-.014-4.99-.048-5.934-.034-.943-.156-1.516-.34-2.024a6.1 6.1 0 0 0-1.269-2.356c-.63-.905-1.432-1.614-2.331-2.045-.532-.274-1.105-.408-2.052-.44C16.991.033 16.628.019 12.017.019zm0 2.165c4.624 0 4.99.014 5.934.048.943.034 1.456.161 1.795.267.452.176.775.388 1.113.726.338.338.55.661.726 1.113.106.339.233.852.267 1.795.034.943.048 1.31.048 5.934s-.014 4.99-.048 5.934c-.034.943-.161 1.456-.267 1.795a3.033 3.033 0 0 1-.726 1.113 3.033 3.033 0 0 1-1.113.726c-.339.106-.852.233-1.795.267-.943.034-1.31.048-5.934.048s-4.99-.014-5.934-.048c-.943-.034-1.456-.161-1.795-.267a3.033 3.033 0 0 1-1.113-.726 3.033 3.033 0 0 1-.726-1.113c-.106-.339-.233-.852-.267-1.795-.034-.943-.048-1.31-.048-5.934s.014-4.99.048-5.934c.034-.943.161-1.456.267-1.795.176-.452.388-.775.726-1.113.338-.338.661-.55 1.113-.726.339-.106.852-.233 1.795-.267.943-.034 1.31-.048 5.934-.048z"
            ></path>
            <path
              d="M12.017 15.33a3.312 3.312 0 1 1 0-6.624 3.312 3.312 0 0 1 0 6.624zM12.017 7.729a4.288 4.288 0 1 0 0 8.576 4.288 4.288 0 0 0 0-8.576z"
            ></path>
            <circle cx="18.406" cy="5.594" r="1.031"></circle>
          </svg>
          <a
            href={info.social.instagram.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-300 hover:text-[var(--coral-primary)] transition-colors"
            aria-label={`Seguir en Instagram ${info.social.instagram.handle}`}
          >
            <span class="text-sm">{info.social.instagram.handle}</span>
          </a>
        </div>

        <!-- CTA Button -->
        <a
          href="/servicios#clase-prueba"
          class="inline-block bg-[var(--coral-primary)] text-white px-6 py-2 rounded-lg hover-lift transition-all w-full text-center"
        >
          Agenda tu Clase de Prueba
        </a>
        <!-- Mapa embebido pequeño con lazy loading optimizado -->
        <iframe
          src={`https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3330.5!2d-70.55!3d-33.38!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzPCsDIzJzA3LjAiUyA3MMKwMzMnMDAuMCJX!5e0!3m2!1sen!2sus!4v1627849200000&key=${mapKey || ''}`}
          width="100%"
          height="200"
          loading="lazy"
          class="mt-4 rounded-md shadow-md transition-opacity duration-300"
          allowfullscreen=""
          referrerpolicy="no-referrer-when-downgrade"
          title="Ubicación de VivePilates en Vitacura, Av. Kennedy 6800"
          aria-label="Mapa interactivo mostrando la ubicación del estudio VivePilates"
        ></iframe>
      </div>
    </div>

    <!-- Sección inferior con copyright -->
    <div class="text-center mt-8 border-t border-gray-600 pt-4">
      <p class="text-sm text-gray-300">
        &copy; 2025 VivePilates. Todos los derechos reservados. | <a
          href="/privacidad"
          class="hover:text-[var(--coral-primary)]">Política de Privacidad</a
        >
      </p>
    </div>
  </Container>
</footer>

<!-- JSON-LD Schema para LocalBusiness -->
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "@id": "https://vivepilates.cl",
    "name": "VivePilates",
    "description": "Estudio de Pilates en Vitacura con clases personalizadas, profesionales certificados y atención a públicos diversos.",
    "url": "https://vivepilates.cl",
    "telephone": "+56912345678",
    "email": "info@vivepilates.cl",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "Av. Kennedy 6800",
      "addressLocality": "Vitacura",
      "addressRegion": "Región Metropolitana",
      "postalCode": "7630000",
      "addressCountry": "CL"
    },
    "geo": {
      "@type": "GeoCoordinates",
      "latitude": "-33.38",
      "longitude": "-70.55"
    },
    "openingHours": "Mo-Fr 08:00-20:00",
    "serviceType": "Pilates Studio",
    "areaServed": {
      "@type": "City",
      "name": "Vitacura"
    },
    "hasCredential": "Profesionales Certificados",
    "foundingDate": "2010",
    "slogan": "Bienestar Real para tu Vida Real",
    "sameAs": ["https://instagram.com/vivepilates"]
  }
</script>

<style>
  /* Progressive loading reveal - footer visible por defecto para evitar problemas */
  footer {
    opacity: 1;
    transform: translateY(0);
    animation: reveal 0.6s ease forwards;
  }

  /* Animación solo para mejora progresiva */
  @media (prefers-reduced-motion: no-preference) {
    footer {
      opacity: 0;
      transform: translateY(20px);
      animation: reveal 0.6s ease forwards 0.3s;
    }
  }

  @keyframes reveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
