---
import Container from '../ui/Container.astro';
import CTAButton from '../etapa1/shared/CTAButton.astro';

// En producción, esto vendría de content collections MDX
// Por ahora usamos contenido estático con los mismos estilos
const openingHours = {
  title: 'Horarios de Clases',
  weekly: [
    {
      days: 'Lunes a Viernes',
      type: 'Días Laborables',
      hours: '8:00 AM - 8:00 PM'
    },
    {
      days: 'Sábados',
      type: 'Fin de Semana', 
      hours: '9:00 AM - 1:00 PM'
    },
    {
      days: 'Domingos',
      type: 'Descanso',
      hours: 'Cerrado'
    }
  ],
  popular: [
    {
      name: 'Pilates Clásico',
      schedule: 'Lun, Mié, Vie - 9:00 AM, 6:00 PM'
    },
    {
      name: 'Pilates Terapéutico', 
      schedule: 'Mar, Jue - 10:00 AM, 7:00 PM'
    },
    {
      name: 'Pilates Prenatal',
      schedule: 'Sáb - 10:00 AM'
    }
  ]
};
---

<section class="py-16 bg-[var(--cream)]" aria-label="Horarios de clases">
  <Container>
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-[var(--deep-coral)]">
        {openingHours.title}
      </h2>
      <p class="text-lg text-[var(--charcoal-gray)] max-w-2xl mx-auto">
        Encuentra el horario perfecto para tu práctica de Pilates
      </p>
    </div>

    <div class="max-w-4xl mx-auto">
      <!-- Horarios Semanales -->
      <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
        <h3 class="text-2xl font-bold mb-6 text-[var(--deep-coral)] text-center">
          Horarios Semanales
        </h3>
        <div class="grid gap-4 md:gap-6">
          {openingHours.weekly.map((schedule, index) => (
            <div class="flex flex-col md:flex-row md:items-center justify-between p-4 rounded-lg bg-[var(--rose-pale)] hover:bg-[var(--warm-gold)]/10 transition-colors duration-300">
              <div class="mb-2 md:mb-0">
                <span class="font-bold text-lg text-[var(--trust-blue)] day">
                  {schedule.days}
                </span>
                <span class="block md:inline md:ml-2 text-[var(--sage-green)] font-medium">
                  {schedule.type}
                </span>
              </div>
              <span class="font-semibold text-[var(--deep-coral)] hours text-lg">
                {schedule.hours}
              </span>
            </div>
          ))}
        </div>
      </div>

      <!-- Clases Populares -->
      <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
        <h3 class="text-2xl font-bold mb-6 text-[var(--deep-coral)] text-center">
          Clases Populares
        </h3>
        <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
          {openingHours.popular.map((classInfo, index) => (
            <div class="p-4 rounded-lg border-2 border-[var(--sage-green)]/20 hover:border-[var(--sage-green)] transition-colors duration-300 hover:shadow-md">
              <h4 class="font-bold text-[var(--trust-blue)] mb-2">
                {classInfo.name}
              </h4>
              <p class="text-[var(--sage-green)] text-sm">
                {classInfo.schedule}
              </p>
            </div>
          ))}
        </div>
      </div>

      <!-- Nota y CTA -->
      <div class="text-center">
        <p class="text-[var(--charcoal-gray)] mb-6 italic">
          *Horarios sujetos a cambios según demanda. Consulta por WhatsApp para disponibilidad específica.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <CTAButton
            href="/servicios#clase-prueba"
            variant="primary"
            size="lg"
            class="bg-[var(--coral-primary)] hover:bg-[var(--deep-coral)]"
          >
            Agenda tu Clase de Prueba Gratuita
          </CTAButton>
          <a
            href="https://wa.me/56912345678?text=Hola,%20quiero%20consultar%20horarios%20disponibles"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-6 py-3 bg-[var(--sage-green)] text-white font-semibold rounded-lg hover:bg-[var(--sage-green)]/80 transition-colors duration-200"
            aria-label="Consultar horarios por WhatsApp"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"></path>
            </svg>
            Consultar por WhatsApp
          </a>
        </div>
      </div>
    </div>
  </Container>
</section>

<style>
  /* Colorido específico para días y horas según especificación */
  .day {
    color: var(--trust-blue);
    font-weight: bold;
  }
  
  .hours {
    color: var(--sage-green);
    font-weight: 600;
  }
  
  /* Progressive reveal animation */
  section {
    opacity: 0;
    transform: translateY(20px);
    animation: revealSection 0.8s ease forwards;
    animation-delay: 0.3s;
  }
  
  @keyframes revealSection {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Hover effects for better interactivity */
  .grid > div:hover {
    transform: translateY(-2px);
  }
</style>